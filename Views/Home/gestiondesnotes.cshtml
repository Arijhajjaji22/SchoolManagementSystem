                                   async function modifierNote(index) {
                const note = notesList[index];
                document.getElementById("classSelect").value = note.classe;
                document.getElementById("matiere").value = note.matiere;
                document.getElementById("eleve").value = note.eleve;
                document.getElementById("note").value = note.valeur;

                message.textContent = "Modifiez les champs et cliquez sur Enregistrer.";
                message.style.color = "blue";

                // Mise à jour de la note sur le serveur
                form.addEventListener("submit", async (e) => {
                    e.preventDefault();
                               const updatedNote = {
                classe: document.getElementById("classSelect").value,
                matiere: document.getElementById("matiere").value,
                eleveId: parseInt(document.getElementById("eleve").value),
                valeur: parseFloat(document.getElementById("note").value)
            };


                    try {
                        const response = await fetch(`http://localhost:5108/api/Note/${note.id}`, {
                            method: "PUT",
                            headers: {
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify(updatedNote)
                        });

                        if (response.ok) {
                            // Mettre à jour la note dans la liste locale
                            notesList[index] = updatedNote;  // Remplacer l'ancienne note par la nouvelle
                            renderNotes(notesList);  // Redessiner le tableau avec les notes mises à jour
                            message.textContent = "Note mise à jour avec succès !";
                            message.style.color = "green";
                        } else {
                            message.textContent = "Erreur lors de la mise à jour.";
                            message.style.color = "red";
                        }
                    } catch (error) {
                        message.textContent = "Erreur de connexion.";
                        message.style.color = "red";
                    }
                });
            }

                        async function annulerNote(index) {
                if (confirm("Êtes-vous sûr de vouloir supprimer cette note ?")) {
                    const note = notesList[index];
                    try {
                        const response = await fetch(`http://localhost:5108/api/Note/${note.id}`, {
                            method: "DELETE"
                        });

                        if (response.ok) {
                            notesList.splice(index, 1);  // Retirer la note de la liste
                            renderNotes(notesList);
                            message.textContent = "Note supprimée avec succès.";
                            message.style.color = "orange";
                        } else {
                            message.textContent = "Erreur lors de la suppression.";
                            message.style.color = "red";
                        }
                    } catch (error) {
                        message.textContent = "Erreur de connexion.";
                        message.style.color = "red";
                    }
                }
            }


                        function modifierNote(index) {
              const note = notesList[index];
              document.getElementById("classSelect").value = note.classe;
              document.getElementById("matiere").value = note.matiere;
              document.getElementById("note").value = note.valeur;
              // ⚠️ À adapter pour le champ élève selon le chargement dynamique
              message.textContent = "Modifiez les champs et cliquez sur Enregistrer.";
              message.style.color = "blue";
            }

            function annulerNote(index) {
              if (confirm("Êtes-vous sûr de vouloir supprimer cette note ?")) {
                notesList.splice(index, 1);
                renderNotes(notesList);
                message.textContent = "Note supprimée.";
                message.style.color = "orange";
              }
            }
                                function loadStudentsByClass() {
                const selectedClass = document.getElementById("classSelect").value;
                const eleveSelect = document.getElementById("eleve");
                eleveSelect.innerHTML = "<option value=''>-- Choisissez un élève --</option>";

                if (!selectedClass) return;

                fetch(`http://localhost:5108/api/Eleve/elevesParClasseEtMatiere?classe=${selectedClass}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.length === 0) {
                            eleveSelect.innerHTML = "<option value=''>Aucun élève trouvé</option>";
                            return;
                        }

                        studentsList = data; // Met à jour la liste globale des élèves

                        data.forEach(student => {
                            const option = document.createElement("option");
                            option.value = student.id;
                            option.textContent = `${student.prenom} ${student.nom}`; // Affiche prénom et nom
                            eleveSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error("Erreur lors de la récupération des élèves :", error);
                        eleveSelect.innerHTML = "<option value=''>Erreur de connexion</option>";
                    });
            }

                        function renderNotes(notes) {
                tableBody.innerHTML = "";
                notes.forEach((note, index) => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${note.classe}</td>
                        <td>${note.matiere}</td>
                        <td>${note.nomEleve} ${note.prenomEleve}</td> <!-- Affichage du nom et prénom -->
                        <td>${note.valeur}</td>
                        <td>
                            <button class="btn-edit" onclick="modifierNote(${index})" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-delete" onclick="annulerNote(${index})" title="Annuler">
                                <i class="fas fa-times"></i>
                            </button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            }

                        function getStudentName(eleveId) {
              const student = studentsList.find(s => s.id == eleveId);
              return student ? `${student.prenom} ${student.nom}` : eleveId; // Affiche l'ID si non trouvé
            }


                        document.addEventListener("DOMContentLoaded", function () {
                fetch("/api/Matiere")
                    .then(response => {
                        if (!response.ok) {
                            throw new Error("Erreur lors de la récupération des matières");
                        }
                        return response.json();
                    })
                    .then(data => {
                        const select = document.getElementById("matiere");
                        data.forEach(matiere => {
                            const option = document.createElement("option");
                            option.value = matiere.id; // ou matiere.nom si tu préfères
                            option.textContent = matiere.nom;
                            select.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error("Erreur :", error);
                    });
            });
            form.addEventListener("submit", async (e) => {
              e.preventDefault();

            const classe = document.getElementById("classSelect").value;

              const matiere = document.getElementById("matiere").value;
              const eleve = document.getElementById("eleve").value;
              const note = parseFloat(document.getElementById("note").value);

              if (!classe || !matiere || !eleve || isNaN(note)) {
                message.textContent = "Tous les champs sont obligatoires.";
                message.style.color = "red";
                return;
              }
const noteData = { classe, matiere, eleveId: eleve, valeur: note };


              try {
                const response = await fetch("http://localhost:5108/api/Note", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify(noteData)
                });

                if (response.ok) {
                  notesList.push(noteData);
                  renderNotes(notesList);
                  message.textContent = "Note enregistrée avec succès !";
                  message.style.color = "green";
                  form.reset();
                } else {
                  message.textContent = "Erreur lors de l'enregistrement.";
                  message.style.color = "red";
                }
              } catch (error) {
                message.textContent = "Erreur de connexion.";
                message.style.color = "red";
              }
            });

            searchInput.addEventListener("input", () => {
              const searchValue = searchInput.value.toLowerCase();
              const filtered = notesList.filter(note =>
                note.classe.toLowerCase().includes(searchValue) ||
                note.matiere.toLowerCase().includes(searchValue) ||
                note.eleve.toLowerCase().includes(searchValue)
              );
              renderNotes(filtered);
            });

            // Chargement initial (optionnel)
            async function fetchNotes() {
              try {
                const res = await fetch("http://localhost:5108/api/Note");
                if (res.ok) {
                  notesList = await res.json();
                  renderNotes(notesList);
                }
              } catch (err) {
                console.warn("Impossible de charger les notes");
              }
            }

            fetchNotes();
