@{
    Layout = null;
    ViewData["Title"] = "Paiement annulé";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #ff512f, #dd2476);
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background-color: #ffffffcc;
            color: #b71c1c;
            border: none;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .btn-warning {
            background-color: #b71c1c;
            border: none;
            color: white;
        }

            .btn-warning:hover {
                background-color: #8e0000;
            }
    </style>
</head>
<body>
    <div class="card text-center">
        <h2 class="mb-3">❌ Paiement annulé</h2>
        <p class="mb-4">Le paiement a été annulé. Vous pouvez réessayer à tout moment.</p>
        <a class="btn btn-warning" href="/">Retour à l'accueil</a>
    </div>
</body>
</html>
