        <script>
            const form = document.getElementById("congeForm");
            const tableBody = document.getElementById("demandeTableBody");

            let demandeEnCoursModification = null; // Pour savoir si on modifie

            async function chargerDemandes() {
                try {
                    const response = await fetch("http://localhost:5108/api/DemandeConge");
                    const demandes = await response.json();
                    tableBody.innerHTML = '';

                    demandes.forEach(demande => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${demande.nomEnseignant}</td>
                            <td>${demande.emailEnseignant}</td>
                            <td>${demande.dateDebut.substring(0, 10)}</td>
                            <td>${demande.dateFin.substring(0, 10)}</td>
                            <td>${demande.motif}</td>
                            <td>${demande.statut}</td>
                            <td>
                                <button class="action-btn modifier-btn" data-id="${demande.id}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn annuler-btn" data-id="${demande.id}">
                                    <i class="fas fa-times"></i>
                                </button>
                            </td>
                        `;
                        tableBody.appendChild(row);
                    });

                    // Ajouter les événements après avoir généré le DOM
                    document.querySelectorAll(".modifier-btn").forEach(btn =>
                        btn.addEventListener("click", async (e) => {
                            const id = btn.getAttribute("data-id");
                            const res = await fetch(`http://localhost:5108/api/DemandeConge/${id}`);
                            const data = await res.json();

                            document.getElementById("nom").value = data.nomEnseignant;
                            document.getElementById("email").value = data.emailEnseignant;
                            document.getElementById("dateDebut").value = data.dateDebut.substring(0, 10);
                            document.getElementById("dateFin").value = data.dateFin.substring(0, 10);
                            document.getElementById("motif").value = data.motif;

                            demandeEnCoursModification = id;
                        })
                    );

                    document.querySelectorAll(".annuler-btn").forEach(btn =>
                        btn.addEventListener("click", async (e) => {
                            const id = btn.getAttribute("data-id");

                            const confirmation = await Swal.fire({
                                title: "Confirmation",
                                text: "Voulez-vous vraiment annuler cette demande ?",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonText: "Oui, annuler",
                                cancelButtonText: "Non"
                            });

                            if (confirmation.isConfirmed) {
                                const response = await fetch(`http://localhost:5108/api/DemandeConge/${id}`, {
                                    method: "DELETE"
                                });

                                if (response.ok) {
                                    Swal.fire("Annulée", "Demande annulée avec succès.", "success");
                                    chargerDemandes();
                                } else {
                                    Swal.fire("Erreur", "Erreur lors de l'annulation.", "error");
                                }
                            }
                        })
                    );

                } catch (error) {
                    console.error("Erreur lors du chargement des demandes :", error);
                }
            }

            window.onload = chargerDemandes;

            form.addEventListener("submit", async function (event) {
                event.preventDefault();

                const NomEnseignant = document.getElementById("nom").value.trim();
                const EmailEnseignant = document.getElementById("email").value.trim();
                const dateDebut = document.getElementById("dateDebut").value;
                const dateFin = document.getElementById("dateFin").value;
                const motif = document.getElementById("motif").value.trim();

                if (!NomEnseignant || !EmailEnseignant || !dateDebut || !dateFin || !motif) {
                    Swal.fire("Erreur", "Tous les champs sont obligatoires.", "error");
                    return;
                }

                if (dateDebut > dateFin) {
                    Swal.fire("Erreur", "La date de début ne peut pas être après la date de fin.", "error");
                    return;
                }

                const demande = {
                    NomEnseignant,
                    EmailEnseignant,
                    DateDebut: dateDebut,
                    DateFin: dateFin,
                    Motif: motif,
                    Statut: "En attente"
                };

                try {
                    if (demandeEnCoursModification) {
                        // Modification
                        const response = await fetch(`http://localhost:5108/api/DemandeConge/modifier/${demandeEnCoursModification}`, {
                            method: "PUT",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(demande)
                        });

                        if (response.ok) {
                            Swal.fire("Succès", "Demande modifiée avec succès.", "success");
                            form.reset();
                            demandeEnCoursModification = null;
                            chargerDemandes();
                        } else {
                            Swal.fire("Erreur", "Erreur lors de la modification.", "error");
                        }

                    } else {
                        // Création
                        const response = await fetch("http://localhost:5108/api/DemandeConge", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(demande)
                        });

                        if (response.ok) {
                            Swal.fire("Succès", "Votre demande de congé a été envoyée.", "success");
                            form.reset();
                            chargerDemandes();
                        } else {
                            Swal.fire("Erreur", "Échec lors de l'envoi de la demande.", "error");
                        }
                    }
                } catch (error) {
                    console.error("Erreur lors de l'envoi de la demande :", error);
                }
            });
        </script>

