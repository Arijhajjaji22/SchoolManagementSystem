                // Fonction pour remplir le tableau avec les élèves
                             function populateTable() {
                    const tbody = document.getElementById("studentsBody");
                    tbody.innerHTML = '';  // Vider le tableau

                    students.forEach(student => {
                        const row = document.createElement("tr");

                        let statusText = "Non défini";
                        let statusColor = "black";

                        if (student.status === "present") {
                            statusText = "Présent";
                            statusColor = "#28a745";
                        } else if (student.status === "absent") {
                            statusText = "Absent";
                            statusColor = "#dc3545";
                        }

                        row.innerHTML = `
                            <td>${student.nom}</td>
                            <td>${student.prenom}</td>
                            <td>
                                <button class="present" onclick="toggleAbsence(${student.id}, 'present')">Présent</button>
                                <button class="absent" onclick="toggleAbsence(${student.id}, 'absent')">Absent</button>
                            </td>
                            <td id="status-${student.id}" class="status" style="color: ${statusColor};">${statusText}</td>
                        `;
                        tbody.appendChild(row);
                    });
                }

                // Fonction pour changer l'état d'absence ou de présence
                        // Fonction pour changer l'état d'absence ou de présence et l'enregistrer dans la base de données
                                       async function toggleAbsence(studentId, status) {
                    const classSelect = document.getElementById("classSelect");
                    const matiereSelect = document.getElementById("matiereSelect");
                    const selectedClass = classSelect.value;
                    const matiereId = matiereSelect.value;

                    // ✅ Vérification : classe non sélectionnée
                    if (!selectedClass) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Classe non sélectionnée',
                            text: 'Veuillez choisir une classe.',
                            confirmButtonColor: '#d33'
                        });
                        return;
                    }

                    // ✅ Vérification : matière non sélectionnée
                    if (!matiereId) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Matière non sélectionnée',
                            text: 'Veuillez choisir une matière.',
                            confirmButtonColor: '#d33'
                        });
                        return;
                    }

                    const statusCell = document.getElementById(`status-${studentId}`);

                    if (status === 'present') {
                        statusCell.textContent = "Présent";
                        statusCell.style.color = "#28a745";
                    } else if (status === 'absent') {
                        statusCell.textContent = "Absent";
                        statusCell.style.color = "#dc3545";
                    }

                    const absenceData = {
                        EleveId: studentId,
                        MatiereId: matiereId,
                        Status: status
                    };

                    try {
                        const response = await fetch('http://localhost:5108/api/Absence/enregistrer', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(absenceData)
                        });

                        if (!response.ok) {
                            throw new Error('Erreur lors de l\'enregistrement de l\'absence');
                        }

                        const data = await response.json();
                        console.log(data);

                        await loadStudentsByClass();

                        Swal.fire({
                            icon: 'success',
                            title: 'Statut mis à jour',
                            text: `L'élève a été marqué comme ${status === 'present' ? 'présent' : 'absent'}.`,
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        });

                    } catch (error) {
                        console.error('Erreur:', error);
                    }
                }

                // Réinitialiser tous les statuts des absences
                function resetAbsences() {
                    const statusCells = document.querySelectorAll(".status");
                    statusCells.forEach(cell => {
                        cell.textContent = "Non défini";
                        cell.style.color = "black";
                    });
                }

                // Mettre à jour la liste des matières en fonction de la classe sélectionnée
                              function updateMatiereList() {
                    const matiereSelect = document.getElementById("matiereSelect");

                    // Vider la liste des matières
                    matiereSelect.innerHTML = '<option value="">Choisir une matière</option>';

                    // Ajouter toutes les matières à la liste déroulante
                    matieres.forEach(matiere => {
                        const option = document.createElement("option");
                        option.value = matiere.id;
                        option.textContent = matiere.nom;
                        matiereSelect.appendChild(option);
                    });
                }

                                // Charger les élèves selon la classe sélectionnée
                async function loadStudentsByClass() {
                    const classSelect = document.getElementById("classSelect");
                    const selectedClass = classSelect.value;

                    if (!selectedClass) {
                        // Si aucune classe sélectionnée, on vide la liste
                        students = [];
                        populateTable();
                        return;
                    }

                    try {
                        const response = await fetch(`http://localhost:5108/api/Eleve/elevesParClasseEtMatiere?classe=${encodeURIComponent(selectedClass)}`);
                        if (!response.ok) {
                            throw new Error('Échec de la récupération des élèves pour cette classe');
                        }
                        students = await response.json();
                        populateTable();
                    } catch (error) {
                        console.error(error);
                    }
                }

                // Charger les élèves via l'API
                async function loadStudents() {
                    try {
                        const response = await fetch('http://localhost:5108/api/Eleve'); // URL de l'API pour récupérer les élèves
                        if (!response.ok) {
                            throw new Error('Échec de la récupération des élèves');
                        }
                        students = await response.json();
                        populateTable();
                    } catch (error) {
                        console.error(error);
                    }
                }

                // Charger les matières via l'API
                async function loadMatieres() {
                    try {
                        const response = await fetch('http://localhost:5108/api/Matiere'); // URL de l'API pour récupérer les matières
                        if (!response.ok) {
                            throw new Error('Échec de la récupération des matières');
                        }
                        matieres = await response.json();
                        updateMatiereList();  // Mettre à jour la liste des matières après leur chargement
                    } catch (error) {
                        console.error(error);
                    }
                }

                // Charger les données au démarrage
                window.onload = function() {
                    loadStudents();  // Appeler la fonction pour récupérer les élèves
                    loadMatieres();   // Appeler la fonction pour récupérer les matières
