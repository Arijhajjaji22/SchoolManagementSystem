        document.getElementById("date-annee-scolaire").textContent = new Date().toLocaleDateString();

        const matieresParClasse = {};
        let indexModification = -1; // -1 = pas de modification en cours
        let matiereIdEnCours = null;

            async function afficherMatieres() {
            const classe = document.getElementById("classe").value;
            const tbody = document.getElementById("table-matieres-body");
            tbody.innerHTML = "";

            if (!classe) return;

            try {
                const response = await fetch(`/api/Matiere/${classe}`);
                if (!response.ok) throw new Error("Erreur lors du chargement des matières");

                const matieres = await response.json();

                matieres.forEach((matiere) => {
                    const tr = document.createElement("tr");
                    tr.innerHTML = `
                        <td>${matiere.nom}</td>
                        <td>${matiere.horaire} h</td>
                        <td>
                            ${matiere.programmePdf ? `<a href="/api/Matiere/download/${matiere.id}" target="_blank">Voir le programme</a>` : "Aucun"}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning me-2" onclick="chargerMatierePourModification(${matiere.id})">Modifier</button>
                            <button class="btn btn-sm btn-danger" onclick="supprimerMatiere(${matiere.id})">Supprimer</button>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });
            } catch (error) {
                alert("Erreur : " + error.message);
            }
        }


                  async function ajouterMatiere() {
            const classe = document.getElementById("classe").value;
            const nom = document.getElementById("nomMatiere").value.trim();
            const horaire = document.getElementById("horaireMatiere").value.trim();
            const programmeInput = document.getElementById("programmeMatiere");

            if (!classe || !nom || !horaire) {
                alert("Veuillez remplir tous les champs et sélectionner une classe.");
                return;
            }

            const formData = new FormData();
            formData.append("Nom", nom);
            formData.append("Horaire", horaire);
            formData.append("Classe", classe);
            if (programmeInput.files.length > 0) {
                formData.append("programme", programmeInput.files[0]);
            }

            if (indexModification === -1) {
                // POST = ajouter
                await fetch("/api/Matiere", {
                    method: "POST",
                    body: formData
                });
            } else {
                // PUT = mise à jour
                await fetch(`/api/Matiere/${matiereIdEnCours}`, {
            method: "PUT",
            body: formData
        });
               matiereIdEnCours = null;
        indexModification = -1;
        document.querySelector("button[onclick='ajouterMatiere()']").textContent = "Ajouter";
            }

            reinitialiserFormulaire();
            afficherMatieres();
        }

            function reinitialiserFormulaire() {
            document.getElementById("nomMatiere").value = "";
            document.getElementById("horaireMatiere").value = "";
            document.getElementById("programmeMatiere").value = "";
                  matiereIdEnCours = null;
        indexModification = -1;

            document.querySelector("button[onclick='ajouterMatiere()']").textContent = "Ajouter";
        }
                async function afficherMatieres() {
            const classe = document.getElementById("classe").value;
            const tbody = document.getElementById("table-matieres-body");
            tbody.innerHTML = "";

            if (!classe) return;

            const response = await fetch(`/api/Matiere/${classe}`);
            const matieres = await response.json();

            matieresParClasse[classe] = matieres;

            matieres.forEach((matiere, index) => {
                const tr = document.createElement("tr");
                tr.innerHTML = `
                    <td>${matiere.nom}</td>
                    <td>${matiere.horaire} h</td>
                    <td>
                        ${matiere.programmePdf ? `<a href="/api/Matiere/download/${matiere.id}" target="_blank">Voir le programme</a>` : "Aucun"}
                    </td>
                    <td>
        <button class="btn btn-sm btn-warning me-2" onclick="chargerMatierePourModification(${matiere.id})">Modifier</button>

        <button class="btn btn-sm btn-danger" onclick="supprimerMatiere(${matiere.id})">Supprimer</button>
                            </td>
                `;
                tbody.appendChild(tr);
            });

            reinitialiserFormulaire();
        }

              async function supprimerMatiere(id) {
            if (!confirm("Voulez-vous vraiment supprimer cette matière ?")) return;

            try {
                const response = await fetch(`/api/Matiere/${id}`, { method: "DELETE" });
                if (!response.ok) throw new Error("Erreur lors de la suppression");

                afficherMatieres();
            } catch (error) {
                alert("Erreur : " + error.message);
            }
        }
             async function chargerMatierePourModification(id) {
            try {
                const response = await fetch(`/api/Matiere/${id}`);
                const matiere = await response.json();

                // Vérifie que les données sont bien récupérées
                if (!matiere) {
                    alert("Aucune matière trouvée.");
                    return;
                }

                // Remplir les champs du modal avec les données récupérées
                document.getElementById("nomMatiere").value = matiere.nom || '';
                document.getElementById("horaireMatiere").value = matiere.horaire || '';
                document.getElementById("programmeMatiere").value = matiere.programmePdf || '';  // Assure-toi que c'est bien ce que tu veux afficher

                // Ouvrir le modal de modification
                new bootstrap.Modal(document.getElementById('modalModification')).show();

                // Mettre à jour l'id de la matière en cours
                matiereIdEnCours = matiere.id;
                indexModification = 1; // Indiquer qu'on est en mode modification
            } catch (err) {
                alert("Erreur lors du chargement de la matière");
            }
        }

                async function mettreAJourMatiere() {
            const nom = document.getElementById("nomMatiere").value.trim();
            const horaire = document.getElementById("horaireMatiere").value.trim();
            const programmeInput = document.getElementById("programmeMatiere");

            if (!nom || !horaire) {
                alert("Veuillez remplir tous les champs.");
                return;
            }

            const formData = new FormData();
            formData.append("Nom", nom);
            formData.append("Horaire", horaire);
            if (programmeInput.files.length > 0) {
                formData.append("programme", programmeInput.files[0]);
            }

            try {
                // PUT = mise à jour
                const response = await fetch(`/api/Matiere/${matiereIdEnCours}`, {
                    method: "PUT",
                    body: formData
                });
                if (!response.ok) throw new Error("Erreur lors de la mise à jour");

                afficherMatieres();  // Rafraîchir la liste des matières
                document.querySelector("button[onclick='ajouterMatiere()']").textContent = "Ajouter";
                document.getElementById("modalModification").classList.remove("show"); // Fermer le modal
            } catch (error) {
                alert("Erreur : " + error.message);
            }
        }

