   <script>
                  function envoyerEmailBienvenue() {
            const emailPersonnel = document.getElementById("emailPersonnel").value;
            const emailInstitutionnel = document.getElementById("emailInstitutionnel").value;
            const motDePasse = document.getElementById("motDePasse").value;

            if (!emailPersonnel || !emailInstitutionnel || !motDePasse) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Champs manquants',
                    text: "Veuillez générer l'email institutionnel et le mot de passe avant d'envoyer.",
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            fetch('/api/Directeur/EnvoyerEmailBienvenue', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    emailPersonnel: emailPersonnel,
                    emailInstitutionnel: emailInstitutionnel,
                    motDePasse: motDePasse
                })
            })
            .then(response => {
                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Email envoyé avec succès 🎉',
                        text: `Un email de bienvenue a été envoyé à ${emailPersonnel}`,
                        confirmButtonColor: '#28a745'
                    });
                } else if (response.status === 409) { // Si tu gères les emails déjà envoyés côté backend
                    Swal.fire({
                        icon: 'info',
                        title: 'Email déjà envoyé',
                        text: `L'email a déjà été envoyé à ${emailPersonnel}`,
                        confirmButtonColor: '#ffc107'
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: "Échec de l'envoi de l'email.",
                        confirmButtonColor: '#dc3545'
                    });
                }
            })
            .catch(error => {
                console.error('Erreur fetch :', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur réseau',
                    text: "Impossible de contacter le serveur.",
                    confirmButtonColor: '#dc3545'
                });
            });
        }

    // Définir la fonction genererEmail en dehors de window.onload pour qu'elle soit globale
    function genererEmail() {
        const nom = document.getElementById('nom').value.toLowerCase().trim();
        const prenom = document.getElementById('prenom').value.toLowerCase().trim();
        const numeroCIN = document.getElementById('numeroCIN').value.trim();

        if (nom && prenom && numeroCIN) {
            const emailInstitutionnel = `${nom}.${prenom}@@edunova.com`;
            document.getElementById('emailInstitutionnel').value = emailInstitutionnel;
            document.getElementById('motDePasse').value = numeroCIN;
        } else {
            alert("Veuillez d'abord remplir le nom, prénom et numéro CIN.");
        }
    }

    window.onload = function() {
        // Assurez-vous que les éléments sont disponibles avant d'ajouter l'événement
        document.getElementById('ajoutDirecteurForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Empêche la soumission normale du formulaire

            const formData = new FormData(this);
            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });

            fetch('/api/Directeur', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(result => {
                console.log('Succès :', result);
                     window.location.href = '/Home/ComptesDirecteur';
                })
            .catch(error => {
                console.error('Erreur :', error);
            });
        });
    }
</script>


