        function updateRegions() {
          const countrySelect = document.getElementById("country");
          const regionSelect = document.getElementById("state");
          const selectedCountry = countrySelect.value;
          const otherCountryContainer = document.getElementById("otherCountryContainer");
          const otherRegionContainer = document.getElementById("otherRegionContainer");
          const regionContainer = document.getElementById("regionContainer");
          const countryContainer = document.getElementById("countryContainer");

          // Réinitialiser les options de région
          regionSelect.innerHTML = '<option value="">Sélectionnez une région</option>';

          // Masquer ou afficher les sections selon le choix
          if (selectedCountry === "Autre") {
            countryContainer.style.display = "none";  // Cacher la sélection du pays
            regionContainer.style.display = "none";   // Cacher la sélection de la région
            otherCountryContainer.style.display = "block";  // Afficher le champ pour entrer le pays
            otherRegionContainer.style.display = "block";   // Afficher le champ pour entrer la région
          } else {
            countryContainer.style.display = "block";  // Afficher la sélection du pays
            regionContainer.style.display = "block";   // Afficher la sélection de la région
            otherCountryContainer.style.display = "none";  // Cacher le champ pour entrer le pays
            otherRegionContainer.style.display = "none";   // Cacher le champ pour entrer la région

            // Remplir les régions si disponibles
            if (regionsByCountry[selectedCountry]) {
              regionsByCountry[selectedCountry].forEach(region => {
                const option = document.createElement("option");
                option.value = region;
                option.textContent = region;
                regionSelect.appendChild(option);
              });
            }
          }
        }

