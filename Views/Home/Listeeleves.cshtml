    <script>
               async function loadEleves() {
            try {
                const response = await fetch('/api/eleve/ayant-paye');
                if (!response.ok) {
                    throw new Error("Erreur lors de la récupération des élèves.");
                }

                const eleves = await response.json();
                const tableBody = document.getElementById('ElevesTableBody');
                tableBody.innerHTML = '';

                eleves.forEach(eleve => {
                    const row = document.createElement('tr');
                    row.setAttribute('data-eleve-id', eleve.id);

                    const bulletinLink = eleve.bulletinFile
                        ? `<a href="/api/Eleve/GetBulletin/${eleve.id}" target="_blank">Télécharger</a>`
                        : 'Aucun fichier';

                    // Vérifie si email institutionnel déjà généré
                    const emailGenere = eleve.emailInstitutionnel && eleve.motDePasse;
                    const boutonEmail = emailGenere
                        ? `<button class="btn btn-sm btn-secondary me-1" disabled>Email généré 📧</button>`
                        : `<button class="btn btn-sm btn-success me-1" onclick="genererEmailInstitutionnel('${eleve.nom}', '${eleve.prenom}', this)">Générer Email</button>`;

                    row.innerHTML = `
                        <td>${eleve.prenom}</td>
                        <td>${eleve.nom}</td>
                        <td>${eleve.classe}</td>
                        <td>${eleve.ecolePrecedente}</td>
                        <td>${eleve.filiere ?? ''}</td>
                        <td>${eleve.option ?? ''}</td>
                        <td>${eleve.email}</td>
                        <td>${eleve.emailParent}</td>
                        <td>${new Date(eleve.dateDeNaissance).toLocaleDateString()}</td>
                        <td>${eleve.lieuDeNaissance}</td>
                        <td>${eleve.nationalite}</td>
                        <td>${bulletinLink}</td>
                        <td
                            data-email-personnel="${eleve.email}"
                            data-email-institutionnel="${eleve.emailInstitutionnel ?? ''}"
                            data-mot-de-passe="${eleve.motDePasse ?? ''}"
                        >
                            ${boutonEmail}
                            <button class="btn btn-sm btn-warning" onclick="envoyerEmailBienvenue(this)">Envoyer Email</button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });

            } catch (error) {
                console.error(error);
                alert("Erreur lors du chargement des élèves.");
            }
        }


        window.onload = loadEleves;

        function genererMotDePasseAleatoire(longueur = 10) {
            const caracteres = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@@#$%^&*";
            let motDePasse = "";
            for (let i = 0; i < longueur; i++) {
                const randomIndex = Math.floor(Math.random() * caracteres.length);
                motDePasse += caracteres[randomIndex];
            }
            return motDePasse;
        }

                  async function genererEmailInstitutionnel(nom, prenom, buttonElement) {
            const parentCell = buttonElement.closest('td');
            const row = parentCell.closest('tr');
            const eleveId = row.dataset.eleveId;

            if (!nom || !prenom) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Champs manquants',
                    text: "Nom ou prénom manquant pour générer l'email.",
                });
                return;
            }

            // Vérifie si déjà généré depuis le dataset
            const existingEmail = parentCell.dataset.emailInstitutionnel;
            const existingPassword = parentCell.dataset.motDePasse;
            if (existingEmail && existingPassword) {
                Swal.fire({
                    icon: 'info',
                    title: 'Déjà généré',
                    html: `Email : <b>${existingEmail}</b><br>Mot de passe : <b>${existingPassword}</b>`,
                });
                return;
            }

            const emailInstitutionnel = `${nom.toLowerCase()}.${prenom.toLowerCase()}@@edunova.com`;
            const motDePasse = genererMotDePasseAleatoire(10);

            // Mise à jour local
            parentCell.dataset.emailInstitutionnel = emailInstitutionnel;
            parentCell.dataset.motDePasse = motDePasse;

            // Mise à jour visuelle du bouton
            buttonElement.textContent = "Email généré 📧";
            buttonElement.classList.remove('btn-success');
            buttonElement.classList.add('btn-secondary');
            buttonElement.disabled = true;

            // Enregistrement en base
            try {
                const response = await fetch(`/api/Eleve/MajInfosInstitutionnelles/${eleveId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        emailInstitutionnel: emailInstitutionnel,
                        motDePasse: motDePasse
                    })
                });
                if (!response.ok) throw new Error("Erreur de sauvegarde");

                Swal.fire({
                    icon: 'success',
                    title: 'Email généré',
                    html: `Email : <b>${emailInstitutionnel}</b><br>Mot de passe : <b>${motDePasse}</b>`,
                });
            } catch (err) {
                console.error("Erreur de mise à jour :", err);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: "Impossible de sauvegarder l'email et mot de passe dans la base.",
                });
            }
        }

        function envoyerEmailBienvenue(buttonElement) {
            const parentCell = buttonElement.closest('td');
            const emailInstitutionnel = parentCell.dataset.emailInstitutionnel;
            const motDePasse = parentCell.dataset.motDePasse;
            const emailPersonnel = parentCell.dataset.emailPersonnel;

            if (!emailInstitutionnel || !motDePasse) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Informations manquantes',
                    text: "Veuillez d'abord générer l'email institutionnel avant d'envoyer.",
                });
                return;
            }

            fetch('/api/Directeur/EnvoyerEmailBienvenue', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    emailPersonnel: emailPersonnel,
                    emailInstitutionnel: emailInstitutionnel,
                    motDePasse: motDePasse
                })
            })
            .then(response => {
                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Email envoyé 🎉',
                        text: `Un email de bienvenue a été envoyé à ${emailPersonnel}`,
                    });
                } else if (response.status === 409) {
                    Swal.fire({
                        icon: 'info',
                        title: 'Email déjà envoyé',
                        text: `L'email a déjà été envoyé à ${emailPersonnel}`,
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: "Échec de l'envoi de l'email.",
                    });
                }
            })
            .catch(error => {
                console.error('Erreur fetch :', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur réseau',
                    text: "Impossible de contacter le serveur.",
                });
            });
        }
