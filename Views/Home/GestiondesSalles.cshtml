    <!-- Ajouter le script pour gérer l'ajout de salle -->
    <script>
        const tableSallesBody = document.querySelector('#tableSalles tbody');
        let salles = [];

        // Charger les salles depuis l'API
        async function loadSalles() {
            const response = await fetch('/api/Salle');
            salles = await response.json();
            afficherSalles();
        }

        function afficherSalles() {
            tableSallesBody.innerHTML = '';
            salles.forEach((salle, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${salle.numSalle}</td>
                    <td>${salle.capacite}</td>
                    <td>${salle.departement}</td>
                    <td>${salle.typeSalle}</td>
                    <td>${salle.disponibilite}</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="modifierSalle(${salle.id})">Modifier</button>
                        <button class="btn btn-danger btn-sm" onclick="supprimerSalle(${salle.id})">Supprimer</button>
                    </td>
                `;
                tableSallesBody.appendChild(row);
            });
        }

        // Ajouter une salle
        document.getElementById('formSalle').addEventListener('submit', async function (event) {
            event.preventDefault();

            const salleData = {
                numSalle: document.getElementById('numSalle').value,
                capacite: parseInt(document.getElementById('capacite').value),
                departement: document.getElementById('departement').value,
                typeSalle: document.getElementById('typeSalle').value,
                disponibilite: document.getElementById('disponibilite').value
            };

            await fetch('/api/Salle', {
                method: 'POST',
                body: new URLSearchParams(salleData)
            });

            document.getElementById('formSalle').reset();
            loadSalles();
        });

        // Supprimer une salle
        async function supprimerSalle(id) {
            if (confirm("Voulez-vous vraiment supprimer cette salle ?")) {
                await fetch(`/api/Salle/${id}`, {
                    method: 'DELETE'
                });
                loadSalles();
            }
        }

        // Modifier une salle (chargement des données dans le formulaire)
        async function modifierSalle(id) {
            const salle = salles.find(s => s.id === id);
            if (!salle) return;

            document.getElementById('numSalle').value = salle.numSalle;
            document.getElementById('capacite').value = salle.capacite;
            document.getElementById('departement').value = salle.departement;
            document.getElementById('typeSalle').value = salle.typeSalle;
            document.getElementById('disponibilite').value = salle.disponibilite;

            // Supprimer temporairement l'ancienne salle (optionnel)
            await fetch(`/api/Salle/${id}`, {
                method: 'DELETE'
            });

            loadSalles();
        }

        // Charger les salles au chargement de la page
        loadSalles();
    </script>

