                async function chargerEmplois() {
                    const response = await fetch('/Emploi/GetEmploisProfesseur');
                    const emplois = await response.json();

                    const emploiBody = document.getElementById('emploiBody');
                    emploiBody.innerHTML = '';

                    emplois.forEach(e => {
                        const row = `
                            <tr>
                                <td>${e.professeurNom}</td>
                                <td>${e.professeurPrenom}</td>
                                <td>${e.classe}</td>
                             
                                <td>${new Date(e.dateAjout).toLocaleDateString()}</td>
                                <td><a href="data:application/pdf;base64,${e.pdfBase64}" target="_blank">Voir PDF</a></td>
                            </tr>
                        `;
                        emploiBody.innerHTML += row;
                    });
                }

                                         function chargerTablePdfs() {
                    fetch('/api/Professeur/pdfs')
                        .then(res => res.json())
                        .then(pdfs => {
                            const tbody = document.getElementById("emploiBody");
                            const selectClasse = document.getElementById("filterClasse");
                            const selectSalle = document.getElementById("filterSalle");

                            const classes = new Set();

                            tbody.innerHTML = "";

                            // Grouper les emplois par Professeur
                            const emploisGroupes = {};

                            pdfs.forEach(pdf => {
                                const profKey = `${pdf.professeurId}_${pdf.professeurNom}_${pdf.professeurPrenom}`;

                                if (!emploisGroupes[profKey]) {
                                    emploisGroupes[profKey] = {
                                        professeurNom: pdf.professeurNom,
                                        professeurPrenom: pdf.professeurPrenom,
                                        classes: new Set(),
                                        dateAjout: pdf.dateAjout,
                                        pdfs: []
                                    };
                                }

                                emploisGroupes[profKey].classes.add(pdf.classe);
                                emploisGroupes[profKey].pdfs.push(pdf.pdfBase64);
                            });

                            // Afficher les résultats groupés
                            for (const key in emploisGroupes) {
                                const emploi = emploisGroupes[key];

                                const tr = document.createElement("tr");
                                tr.innerHTML = `
                                    <td>${emploi.professeurNom}</td>
                                    <td>${emploi.professeurPrenom}</td>
                                    <td>${[...emploi.classes].join(", ")}</td>
                                    <td>${new Date(emploi.dateAjout).toLocaleDateString()}</td>
                                    <td>
                                        ${emploi.pdfs.map((pdf, index) => `
                                            <a class="btn btn-sm btn-success m-1" href="data:application/pdf;base64,${pdf}" download="emploi_${key}_${index}.pdf">
                                                📄 Télécharger ${index + 1}
                                            </a>
                                        `).join("")}
                                    </td>
                                `;

                                tr.dataset.nom = emploi.professeurNom.toLowerCase();
                                tr.dataset.prenom = emploi.professeurPrenom.toLowerCase();

                                tbody.appendChild(tr);
                            }

                            // Préparer les filtres
                            pdfs.forEach(pdf => {
                                classes.add(pdf.classe);
                            });

                            selectClasse.innerHTML += [...classes].map(cl => `<option value="${cl}">${cl}</option>`).join('');

                            ajouterFiltres();
                        })
                        .catch(err => {
                            console.error("Erreur lors du chargement des PDFs :", err);
                        });
                }

                function ajouterFiltres() {
                    const inputSearch = document.getElementById("searchInput");
                    const filterClasse = document.getElementById("filterClasse");
                    const filterSalle = document.getElementById("filterSalle");

                    function filterTable() {
                        const searchValue = inputSearch.value.toLowerCase();
                        const classeValue = filterClasse.value;
                        const salleValue = filterSalle.value;

                        document.querySelectorAll("#emploiBody tr").forEach(row => {
                            const nom = row.dataset.nom;
                            const prenom = row.dataset.prenom;
                            const classe = row.dataset.classe;
                            const salle = row.dataset.salle;

                            const matchSearch = nom.includes(searchValue) || prenom.includes(searchValue);
                            const matchClasse = classeValue === "" || classe === classeValue;
                            const matchSalle = salleValue === "" || salle === salleValue;

                            row.style.display = (matchSearch && matchClasse && matchSalle) ? "" : "none";
                        });
                    }

                    inputSearch.addEventListener("input", filterTable);
                    filterClasse.addEventListener("change", filterTable);
                    filterSalle.addEventListener("change", filterTable);
                }

                window.onload = function () {
                    // Appelle ici ce que tu veux charger au démarrage
                    // Soit chargerTablePdfs(), soit chargerEmplois(), soit les deux
