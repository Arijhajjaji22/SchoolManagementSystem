    <script>
        async function loadDirecteurs() {
            try {
                const response = await fetch('/api/Directeur/all');
                if (!response.ok) {
                    throw new Error('Erreur lors de la récupération des directeurs');
                }
                const directeurs = await response.json();
                const tableBody = document.getElementById('directeursTableBody');
                tableBody.innerHTML = '';

                directeurs.forEach(directeur => {
                    const row = document.createElement('tr');

                    row.innerHTML = `
                        <td>${directeur.prenom}</td>
                        <td>${directeur.nom}</td>
                        <td>${directeur.numeroCIN}</td>
                        <td>${directeur.emailPersonnel}</td>
                        <td>${directeur.telephone}</td>
                        <td>${directeur.adresse}</td>
                        <td>${directeur.emailInstitutionnel}</td>
                        <td>
                            <button class="icon-button edit-icon" data-id='${directeur.id}' data-directeur='${JSON.stringify(directeur)}'>
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="icon-button delete-icon" data-id="${directeur.id}">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    `;

                    tableBody.appendChild(row);
                });

                document.querySelectorAll('.delete-icon').forEach(button => {
                    button.addEventListener('click', async function () {
                        const directeurId = this.getAttribute('data-id');
                        await deleteDirecteur(directeurId);
                        loadDirecteurs();
                    });
                });
          document.querySelectorAll('.edit-icon').forEach(button => {
            button.addEventListener('click', function () {
                const directeur = JSON.parse(this.getAttribute('data-directeur'));

                // Remplissage des champs
                document.getElementById('editId').value = directeur.id;
                document.getElementById('editPrenom').value = directeur.prenom;
                document.getElementById('editNom').value = directeur.nom;
                document.getElementById('editNumeroCIN').value = directeur.numeroCIN;
                document.getElementById('editEmailPersonnel').value = directeur.emailPersonnel;
                document.getElementById('editTelephone').value = directeur.telephone;
                document.getElementById('editAdresse').value = directeur.adresse;
                document.getElementById('editEmailInstitutionnel').value = directeur.emailInstitutionnel;

                // Ouverture de la modale Bootstrap
                const modal = new bootstrap.Modal(document.getElementById('editModal'));
                modal.show();
            });
        });



            } catch (error) {
                console.error('Erreur:', error);
                alert('Une erreur est survenue lors du chargement des directeurs.');
            }
        }

               async function deleteDirecteur(id) {
            // Afficher une alerte de confirmation avant de supprimer
            Swal.fire({
                title: 'Confirmation',
                text: "Êtes-vous sûr de vouloir supprimer ce directeur ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        const response = await fetch(`/api/Directeur/${id}`, {
                            method: 'DELETE'
                        });
                        if (response.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Succès',
                                text: 'Directeur supprimé avec succès.',
                                timer: 2000,
                                showConfirmButton: false
                            });
                            loadDirecteurs(); // Recharge la liste des directeurs après la suppression
                        } else {
                            Swal.fire('Erreur', 'Erreur lors de la suppression du directeur.', 'error');
                        }
                    } catch (error) {
                        console.error('Erreur:', error);
                        Swal.fire('Erreur', 'Une erreur est survenue lors de la suppression du directeur.', 'error');
                    }
                }
            });
        }

        // Soumission du formulaire de modification
        document.getElementById('editForm').addEventListener('submit', async function (e) {
            e.preventDefault(); // Empêche l'envoi automatique du formulaire

            Swal.fire({
                title: 'Confirmation',
                text: "Voulez-vous vraiment enregistrer les modifications ?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Oui, enregistrer',
                cancelButtonText: 'Annuler',
            }).then(async (result) => {
                if (result.isConfirmed) {
                    const id = document.getElementById('editId').value;
                    const updatedData = {
                        id: parseInt(id),
                        prenom: document.getElementById('editPrenom').value,
                        nom: document.getElementById('editNom').value,
                        numeroCIN: document.getElementById('editNumeroCIN').value,
                        emailPersonnel: document.getElementById('editEmailPersonnel').value,
                        telephone: document.getElementById('editTelephone').value,
                        adresse: document.getElementById('editAdresse').value,
                        emailInstitutionnel: document.getElementById('editEmailInstitutionnel').value
                    };

                    try {
                        const response = await fetch(`/api/Directeur/${id}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(updatedData)
                        });

                        if (response.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Succès',
                                text: 'Directeur mis à jour avec succès !',
                                timer: 2000,
                                showConfirmButton: false
                            });

                            const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                            modal.hide();
                            loadDirecteurs();
                        } else {
                            const errorData = await response.json();
                            Swal.fire('Erreur', errorData.message || 'Erreur lors de la mise à jour du directeur.', 'error');
                        }
                    } catch (error) {
                        console.error("Erreur :", error);
                        Swal.fire('Erreur', "Une erreur est survenue lors de la mise à jour.", 'error');
                    }
                }
            });
        });

        window.onload = loadDirecteurs;
    </script>



